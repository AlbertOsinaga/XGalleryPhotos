<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="XGaleryPhotos.Views.AuthenticationPage"
             BackgroundImage="LBC_FONDO.jpg">

    <StackLayout Orientation="Vertical" Padding="30" Spacing="10">  
        <Image Source="LBC_LOGO.jpg"/>
        <Label Text="APP CAPTURA FOTOS" FontSize="Large" HorizontalOptions="Center" />
        <Frame BackgroundColor="#BF043055" HasShadow="False">  
            <StackLayout Orientation="Vertical" Spacing="10">  
                <Entry x:Name="txtUsuario" Placeholder="Usuario"   
                           PlaceholderColor="White" HeightRequest="40"   
                           TextColor="White"/>  
                <Entry x:Name="txtClave" Placeholder="Clave"   
                           PlaceholderColor="White" HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="White"/>  
            </StackLayout>  
        </Frame>  
        <Button x:Name="btnLogin" Text="Login" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="Blue"
                    Clicked="btnLogin_Clicked"
                    />  
        <Button x:Name="btnCerrarApp" Text="Cerrar Aplicación" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="Blue"
                    Clicked="btnCerrarApp_Clicked"
                    />  
     </StackLayout> 

</ContentPage>
